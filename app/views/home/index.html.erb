		<div class="col-md-6">
			<div class="card">
				<img class="card-img-top" src="fix1.jpg" alt="Post 1 Image">
				<div class="card-body">
					<h4><a href="/articles/1">Customer Project 1</a></h4>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="card">
				<img class="card-img-top" src="suspense.jpeg" alt="Post 2 Image">
				<div class="card-body">
					<h4><a href="/articles/3">Customer Project 2</a></h4>
				</div>
			</div>
		</div>
