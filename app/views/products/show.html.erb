<%= render 'layouts/header' %>
<div style = "padding: 20px">
<p id="notice"><%= notice %></p>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/products">Products</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @product.productName %></li>
  </ol>
</nav>

<br>
<h3 style="font-weight: 700;"><%= @product.productName.upcase %></h3><br>
<div style="width: 100%; height: 40%;text-align:center">
<div style="height: 70%;display:inline-block;border-style: solid; border-width: 1px;">
<%= image_tag("large towing2.jpg", :alt => "towing part", id: "towing part", style: 'height:70%') %>
</div>
<div style="vertical-align: top;height: 100%;margin-left: 40px;display:inline-block;width: 35%;padding: 30px;border-style: solid; border-width: 1px;background-color: #E8E8E8">
<h5>ITEM NUMBER: <%= @product.productCode %></h5>
<h5>Vendor: <%= @product.productVendor%></h5>
<h5>Part Category: <%= @product.productLine%></h5>
<h5>MSRP: <%= number_to_currency(@product.MSRP) %></h5>
<h5>YOUR PRICE: <%= number_to_currency(@product.buyPrice) %></h5>
<h5 style="vertical-align: top;background-color: #4f7942;color:white;padding: 5px;"><a style = "color:white" href="/contacts">Questions? Contact Us</a></h5>
<br><br>
<%= form_for @orderdetail do |f| %>
<%= f.hidden_field :productName, value: @product.productName %>
  <%= f.hidden_field :productCode, value: @product.productCode %>
  <p>Quantity: <%= f.number_field :quantityOrdered, placeholder: "1", :value => @defvalue %></p>
  <%= f.hidden_field :priceEach, value: @product.buyPrice %>
  <%= f.submit "Add to cart" %>
<% end %>

</div>
</div>
<br>
<h6 style="background-color: #e8e8e8;padding: 30px;width: 90%; margin: 0 auto"><%= sanitize(@product.productDescription) %></h6>

<%# link_to 'Edit', edit_product_path(@product) %>
<br>
<br>

<h5 style = "margin-left: 80px"><%= link_to 'Back', products_path %></h5>
</div>
<%= render 'layouts/footer' %>
