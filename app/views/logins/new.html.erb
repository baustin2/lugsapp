
<div class="row justify-content-center">
	<h1 style="font-family:sans-serif;"> Login </h1>
</div>
<div class="row justify-content-center">	
	<%= form_for(:logins, local: true) do |form| %>
	  <div class="field">
	    <%= form.label :email %>
	    <%= form.email_field :email %>
	  </div>
	<div class="field">
	  <%= form.label :password %>
	  <%= form.password_field :password %>
	</div>
	
	<div class="field">
	    <%= form.button "Login", {:style=>'background-color:#4F7942; color:white;', :class => "btn"} %>
	  </div>
	<% end %>
</div>
<div class="row justify-content-center">	
	<%= link_to 'Back', root_path, {:style=>'font:bold 20px sans-serif;'} %>
</div>